{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "sourceMap": true,
    "declarationMap": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
