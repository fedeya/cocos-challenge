{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
